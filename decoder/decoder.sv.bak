module decoder(input logic[3:0] binary,
               output logic [7:0]  bcd);

					
always_comb
case(binary)
4'b0000: bcd = 8'00000000; //0 en BCD
4'b0001: bcd = 8'00000001; //1 en BCD
4'b0010: bcd = 8'00000010; //2 en BCD
4'b0011: bcd = 8'00000011; //3 en BCD
4'b0100: bcd = 8'00000100; //4 en BCD
4'b0101: bcd = 8'00000101; //5 en BCD
4'b0110: bcd = 8'00000110; //6 en BCD
4'b0111: bcd = 8'00000111; //7 en BCD
4'b1000: bcd = 8'00001000; //8 en BCD
4'b1001: bcd = 8'00001001; //9 en BCD
4'b1010: bcd = 8'00010000; //10 en BCD
4'b1011: bcd = 8'00010001; //11 en BCD
4'b1100: bcd = 8'00010010; //12 en BCD
4'b1101: bcd = 8'00010011; //13 en BCD
4'b1110: bcd = 8'00010100; //14 en BCD
4'b1111: bcd = 8'00010101; //15 en BCD